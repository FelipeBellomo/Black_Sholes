{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "react-jsx",
    "allowJs": false,
    "noEmit": true,
    "types": ["react", "react-dom"],
    "skipLibCheck": true
  },
  "include": ["src/**/*", "App.tsx"],
  "exclude": ["node_modules", "dist"]
}
